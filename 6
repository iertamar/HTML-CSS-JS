<!DOCTYPE html>
<html lang="en" ng-app="myApp">
<head>
    <meta charset="UTF-8">
    <title></title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://code.angularjs.org/1.6.0-rc.2/angular.min.js"></script>
    <script src="https://code.angularjs.org/1.6.0-rc.0/angular-messages.min.js"></script>
    <script src="https://code.angularjs.org/1.6.0-rc.0/angular-resource.min.js"></script>
    <script src="part.js"></script>
</head>
<body>

<div ng-controller="thecontroller">
    <div>
        <label>What is your FB id</label>
        <input type="text" ng-model="handle"/>
    </div>
    <hr>
    <br>
    <h2>Facebook.com/{{handle}}</h2>

</div>
</body>
</html>

---------------------------manually we are changing-------------------by JS----------

var app = angular.module('myApp' , [] );
app.controller('thecontroller' , function($log, $scope ,$timeout ){
     $scope.handle ='555';
     $scope.$watch('handle',function(newValue , oldValue){
        console.log("old : " + oldValue);
        console.log("new : " + newValue);
     }

     )
});

--------------------By timeout we are changing------------------------------------

var app = angular.module('myApp' , [] );
app.controller('thecontroller' , function($log, $scope ,$timeout ){
     $scope.handle ='555';
     $scope.$watch('handle',function(newValue , oldValue){
        console.log("old : " + oldValue);
        console.log("new : " + newValue);
     }

     )

     setTimeout(function()
     {
         $scope.$apply(function()
         {
             $scope.handle = "New FB ID" ;
             console.log("value of handle has been changed");
         });

     },3000);
});

