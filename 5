<!DOCTYPE html>
<html lang="en" ng-app="myApp">
<head>
    <meta charset="UTF-8">
    <title></title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://code.angularjs.org/1.6.0-rc.2/angular.min.js"></script>
    <script src="https://code.angularjs.org/1.6.0-rc.0/angular-messages.min.js"></script>
    <script src="https://code.angularjs.org/1.6.0-rc.0/angular-resource.min.js"></script>
    <script src="part.js"></script>
</head>
<body>

<div ng-controller="thecontroller">
    <div>
        <input type="text" id="name" />
    </div>
</div>
</body>
</html>
-------------------------------------------------------------------------------------------
first.js
----------

var app = angular.module('myApp' , [] );
app.controller('thecontroller' , function($log, $scope ,$timeout ){
    var tb = document.getElementById("name");

    tb.addEventListener("keypress",
      function(event){
      console.log("key press ho gayi");
      }
    );
});

-----------------------------------------------------------------OR----------------------------
second.js
----------

var app = angular.module('myApp' , [] );
app.controller('thecontroller' , function($log, $scope ,$timeout ){
    var tb = document.getElementById("name");

    tb.addEventListener("mouseover",
      function(event){
      console.log("key press ho gayi");
      }
    );
});

